<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= @pub.image %>');">
  <div class="banner-content">
    <h1>
      <%= @pub.name %>
      <br>
      <%= render 'stars', stars: @pub.average %>
    </h1>
    <p><%= @pub.location %></p>
    <a class="btn btn-primary btn-lg">GET IT</a>
  </div>
</div>

<div class="container padded">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <p class="lead text-center"><%= raw @pub.description %></p>
    </div>
  </div>
  <hr>

  <div class="row">
    <h2 class='text-center'>Add a review to <%= @pub.name %></h2>
    <div class="col-md-6 col-md-offset-3">
      <ul class='list-unstyled'>
       <% @pub.reviews.each do |review| %>
       <li>
        <blockquote>
         <p><%= review.content %><%= render 'stars', stars: review.stars %></p>
       </blockquote>
     </li>
     <% end %>
   </ul>
 </div>

 <div class="col-md-6 col-md-offset-3">
   <%= simple_form_for [@pub, @review] do |f| %>
   <%= f.input :content %>
   <%= f.input :stars, collection: (1..5).to_a, prompt: 'Rate the pub' %>
   <%= f.submit 'Review', class: 'btn btn-primary' %>
   <% end %>
 </div>
</div>
</div>


